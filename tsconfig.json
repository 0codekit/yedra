{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",

    "lib": ["ESNext"],
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",

    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["./src/**/*.ts", "src/routing/websocket.ts"],
  "exclude": ["./src/**/*.test.ts"]
}
